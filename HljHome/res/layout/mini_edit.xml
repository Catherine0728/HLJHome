<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="400.0dip"
        android:layout_height="150.0dip"
        android:layout_marginLeft="60dip"
        android:layout_marginTop="2dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_alignParentLeft="true"
                android:text="现在名称:"
                android:textColor="@color/white"
                android:textSize="24.0dip" />

            <TextView
                android:id="@+id/old_tv"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@id/tv_name"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/new_tv"
                android:layout_width="270.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/edittext_bg_selector"
                android:ellipsize="start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="修  改  为:"
                android:textColor="@color/white"
                android:textSize="24.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:visibility="gone" >

            <Button
                android:id="@+id/parent_confirm"
                android:layout_width="150.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/video_details_btn_selector"
                android:text="确定"
                android:textColor="@color/detail_point"
                android:textSize="24.0dip" />

            <Button
                android:id="@+id/parent_cancel"
                android:layout_width="150.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/video_details_btn_selector"
                android:text="取消"
                android:textColor="@color/detail_point"
                android:textSize="24.0dip" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>