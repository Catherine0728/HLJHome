<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/video_details_bg"
        android:orientation="vertical"
        android:paddingLeft="35.0dip"
        android:paddingRight="35.0dip"
        android:paddingTop="10.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用列表"
                android:textColor="#ffb2b2b2"
                android:textSize="30.0dip" />

            <ImageView
                android:layout_width="2.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="#ffb2b2b2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5.0dip"
            android:text="点击【OK】键打开，长按获取更多功能"
            android:textColor="#ff999999"
            android:textSize="18.0dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/line760" />

        <GridView
            android:id="@id/app_grid_new"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="5.0dip"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="20.0dip"
            android:horizontalSpacing="10.0dip"
            android:numColumns="7"
            android:scrollbars="none"
            android:verticalSpacing="20.0dip" />
    </LinearLayout>

    <ImageView
        android:id="@id/white_boder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border" />

</FrameLayout>