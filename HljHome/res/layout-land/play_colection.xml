                    <TextView
                        android:id="@id/play_collect_tv_text_tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:hint="@string/play_collect_tv_tvname"
                        android:textColor="@color/dark"
                        android:visibility="gone"
                        android:textSize="20.0dip" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@id/play_collect_fl_1"
            android:layout_width="624.0dip"
            android:layout_height="544.0dip"
            android:layout_marginLeft="209.0dip" >

            <ImageView
                android:id="@id/play_collect_bg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shadow_big_center" />

            <ImageView
                android:id="@id/play_collect_post_1"
                android:layout_width="275.0dip"
                android:layout_height="405.0dip"
