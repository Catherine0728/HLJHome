            <ImageView
                android:id="@id/play_collect_info_2"
                android:layout_width="275.0dip"
                android:layout_height="405.0dip"
                android:layout_marginLeft="175.0dip"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/play_collect" />

            <LinearLayout
