<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/live_control_main_bg"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65.0dip"
        android:layout_marginRight="65.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/live_control_new_channle_name"
            android:layout_width="290.0dip"
            android:layout_height="40.0dip"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffff9b00"
            android:textSize="36.0dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/osd_new_epg_current" />

        <TextView
            android:id="@id/live_control_new_epg_current"
            android:layout_width="550.0dip"
            android:layout_height="30.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24.0dip" />

        <Space
            android:layout_width="112.0dip"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/osd_new_time" />

        <TextView
            android:id="@id/live_control_new_systime"
            android:layout_width="115.0dip"
            android:layout_height="30.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3.0dip"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24.0dip" />
    </LinearLayout>

    <ImageView
        android:id="@id/live_control_new_bufgif"
        android:layout_width="fill_parent"
        android:layout_height="9.0dip"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:src="@drawable/player_control_bufgif" />

    <ProgressBar
        android:id="@id/live_control_new_bufimg"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="9.0dip"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:background="@drawable/live_control_main_progbar_bg"
        android:max="100"
        android:progressDrawable="@drawable/live_control_main_progbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40.0dip"
        android:layout_marginLeft="65.0dip"
        android:layout_marginRight="65.0dip" >

        <TextView
            android:id="@id/live_control_new_channle_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43.0dip"
            android:background="@drawable/osd_new_channle_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24.0dip" />

        <TextView
            android:id="@id/live_control_new_channle_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:background="@drawable/osd_new_soure_bg"
            android:gravity="center"
            android:paddingLeft="20.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24.0dip" />

        <Space
            android:layout_width="58.0dip"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/osd_new_epg_next" />

        <TextView
            android:id="@id/live_control_new_epg_next"
            android:layout_width="550.0dip"
            android:layout_height="33.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24.0dip" />

        <TextView
            android:id="@id/live_control_new_cwtime"
            android:layout_width="108.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/osd_new_channl_sw_time"
            android:gravity="center"
            android:paddingLeft="20.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24.0dip" />

        <TextView
            android:id="@id/live_control_new_speed"
            android:layout_width="145.0dip"
            android:layout_height="33.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4.0dip"
            android:background="@drawable/osd_new_conner_time"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="40.0dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="24.0dip" />
    </LinearLayout>

</LinearLayout>