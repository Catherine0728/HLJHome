<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="80dip"
    android:layout_marginTop="30dip"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="80dip"
    android:paddingTop="30dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我的年级"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_grade"
            android:layout_width="215.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="25.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            android:text="我的学期"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_term"
            android:layout_width="215.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="25.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="课本选择:"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_grade"
            android:layout_width="215.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="25.0sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            android:text="我的学期"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@id/setting_term"
            android:layout_width="215.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="25.0sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="语文"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_language"
            android:layout_width="150.0dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="22.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            android:text="数学"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_math"
            android:layout_width="150.0dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="22.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            android:text="英语"
            android:textColor="@color/white"
            android:textSize="24.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@id/setting_english"
            android:layout_width="150.0dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/user_info_spiner_selector"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="22.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/citytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="20.0dip" />

            <TextView
                android:id="@id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:textColor="@color/white"
                android:textSize="20.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="0dip"
            android:orientation="vertical" >

            <Button
                android:id="@id/setting_ok"
                android:layout_width="260.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50.0dip"
                android:background="@drawable/video_details_btn_selector"
                android:text="确定"
                android:textColor="@color/detail_point"
                android:textSize="24.0dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>