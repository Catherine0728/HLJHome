<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/launcher52_bg" >

    <LinearLayout
        android:layout_width="400.0dip"
        android:layout_height="230.0dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="60.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pwd_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:text="内容被保护，请解锁后观看"
                android:textColor="@color/white"
                android:textSize="24.0dip" android:gravity="center_horizontal"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45.0dip" >

            <Button
                android:id="@+id/unlock"
                android:layout_width="130.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentLeft="true"
                android:background="@drawable/video_details_btn_selector"
                android:text="解锁"
                android:textColor="@color/detail_point"
                android:textSize="24.0dip" android:layout_marginLeft="30.0dip"/>

            <Button
                android:id="@+id/exit"
                android:layout_width="130.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/video_details_btn_selector"
                android:text="退出"
                android:textColor="@color/detail_point"
                android:textSize="24.0dip" android:layout_marginRight="30.0dip"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>